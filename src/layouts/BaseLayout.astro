---
const {
  title = "TaxWala.ai - AI-Powered Tax Automation | Private Beta",
  description = "Join the invite-only beta. AI-powered tax automation for Indian businesses. Zero fees. Zero hassle.",
  image = "/banner.png",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.site);

import PostHog from '../components/analytics/posthog.astro';
import Facebook from '../components/analytics/facebook.astro';
import Google from '../components/analytics/google.astro';
import GooglePixel from '../components/analytics/google-pixel.astro';
import ZohoChatBot from '../components/bot/zoho.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <PostHog />
    <Facebook />
    <Google />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/logo.svg" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />
    <meta
      property="og:image:alt"
      content="TaxWala.ai - AI-Powered Tax Automation for Indian Businesses"
    />
    <meta property="og:site_name" content="TaxWala.ai" />
    <meta property="og:locale" content="en_IN" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />
    <meta
      property="twitter:image:alt"
      content="TaxWala.ai - AI-Powered Tax Automation for Indian Businesses"
    />

    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Elitale Softwares Private Limited" />
    <meta
      name="keywords"
      content="tax automation, ITR filing, Indian taxes, AI tax software, tax compliance, business tax, freelancer tax"
    />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <ZohoChatBot />

  </head>
  <body class="bg-background text-foreground antialiased">
    <GooglePixel />
    <slot />
    <slot name="scripts" />
  </body>
</html>