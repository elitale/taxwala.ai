---
const {
  title = "TaxWala.ai - AI-Powered Tax Automation | Private Beta",
  description = "Join the invite-only beta. AI-powered tax automation for Indian businesses. Zero fees. Zero hassle.",
} = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script is:inline>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: {
                DEFAULT: '#0066FF',
                50: '#E6F0FF',
                100: '#CCE1FF',
                200: '#99C3FF',
                300: '#66A5FF',
                400: '#3387FF',
                500: '#0066FF',
                600: '#0052CC',
                700: '#003D99',
                800: '#002966',
                900: '#001433',
              },
              gold: {
                DEFAULT: '#FFD700',
                50: '#FFFEF5',
                100: '#FFFBEB',
                200: '#FFF5CC',
                300: '#FFEFAD',
                400: '#FFE98F',
                500: '#FFD700',
                600: '#CCAC00',
                700: '#998100',
                800: '#665600',
                900: '#332B00',
              },
              background: '#FAFAFA',
              foreground: '#1a1a1a',
            }
          }
        }
      }
    </script>
    <script type="module" is:inline async src="https://static.rocket.new/rocket-web.js?_cfg=https%3A%2F%2Ftaxwalala2643back.builtwithrocket.new&_be=https%3A%2F%2Fappanalytics.rocket.new&_v=0.1.15"></script>
    <script type="module" is:inline defer src="https://static.rocket.new/rocket-shot.js?v=0.0.2"></script>
  </head>
  <body class="bg-background text-foreground antialiased">
    <slot />
    <slot name="scripts" />
  </body>
</html>
